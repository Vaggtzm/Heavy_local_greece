# startEmulators.sh
#!/bin/bash

# Function to zip the emulator metadata after stopping the emulator
zip_emulator_data() {
    zip -r ./emulatorMetadata.zip ./emulatorMetadata
    echo "Emulator data zipped successfully."
}

# Start the Firebase emulators in the background
firebase emulators:start --project heavy-local-12bc4 --import=./emulatorMetadata --export-on-exit=./emulatorMetadata

# Call the function to zip the emulator data
zip_emulator_data
