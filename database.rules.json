{
  "rules": {
    "users": {
      "$uid": {
        "notifications": {
          ".read": "auth != null && auth.uid === $uid",
          ".write": false
        },
        ".read": true,
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "gallery": {
      ".read": true
    },
    "gigs": {
      ".read": true
    },
    "comments": {
      ".read": true
    },
    "articlesList": {
      ".read": true,
      ".indexOn": "date"
    },
    "articlesListLatest": {
      ".read": true
    },
    "deviceTokens":{
      ".read": false,
      ".write":false,
      ".indexOn": "token"
    },
    "authors": {
      "$uid": {
        "notifications": {
          ".read": "auth != null && auth.uid === $uid",
          ".write": false
        },
        ".read": true,
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "ads": {
      ".read": true,
      ".write": "auth != null"
    },
    ".read": "auth != null",
    ".write": "auth.token.admin === true"
  }
}