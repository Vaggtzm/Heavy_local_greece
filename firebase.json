{
  "hosting": {
    "site": "heavy-local-12bc4",
    "predeploy": "npm run build",
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/feed",
        "function": "webApi"
      },
      {
        "source": "/save_token/",
        "function": "saveDeviceToken"
      },
      {
        "source": "/article/**",
        "function": "webApi"
      },
      {
        "source": "/assets/**",
        "function": "webApi"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  },
  "emulators": {
    "functions": {
      "host": "localhost",
      "port": "8443"
    },
    "database": {
      "port": 9001
    },
    "hosting": {
      "port": 5000
    },
    "storage": {
      "port": 9199,
      "rules": "firestore.rules"
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true,
    "firestore": {
      "port": 8081
    }
  },
  "database": {
    "rules": "database.rules.json"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
